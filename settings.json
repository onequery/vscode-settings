{
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "editor.minimap.enabled": false,
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[dockerfile]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "[yaml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[plaintext]": {
        "editor.defaultFormatter": "lkrms.inifmt"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[ignore]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "[shellscript]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "workbench.colorTheme": "Default Light Modern",
    "notebook.output.wordWrap": true,
    "notebook.output.textLineLimit": 10,
    "notebook.output.scrolling": true,
    "files.autoSave": "afterDelay",
    "gitlens.ai.model": "vscode",
    "gitlens.ai.vscode.model": "copilot:gpt-5-mini",
    "gitlens.ai.generateCommitMessage.customInstructions": "Write a commit message in English.\nThe first line MUST be a single short imperative sentence that directly describes the change, with no prefix like 'feat:' or 'fix:'.\nUse the pattern 'Verb + object', for example: 'Update GitLens AI model to gpt-5-mini'.\nCapitalize only the first word (unless proper nouns appear) and do not end the first line with a period.\nIf needed, add an optional body after a blank line with 1â€“2 sentences of additional context.",
    "git.autofetch": true,
    "github.copilot.selectedCompletionModel": ""
}
